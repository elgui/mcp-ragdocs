{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program (build)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "npm run build",
            "args": [],
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program (No Build)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Client",
            "url": "http://localhost:3030",
            "webRoot": "${workspaceFolder}/src/public"
        }
    ]
}
